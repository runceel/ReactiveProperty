<Window
    x:Class="ReactiveProperty.WPF.ManualTests.ValidationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReactiveProperty.WPF.ManualTests"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ValidationWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ValidationViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <TextBox Text="{Binding RequiredText.Value}" />
    </Grid>
</Window>
